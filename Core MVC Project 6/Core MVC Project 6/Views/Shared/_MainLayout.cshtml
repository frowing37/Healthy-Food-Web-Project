
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<title>Mvc Project 6</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet">

<body>

    <div class="w3-sidebar w3-bar-block w3-card w3-animate-left" style="display:none" id="mySidebar">
        <button class="w3-bar-item w3-button w3-large"
                onclick="w3_close()">
            Close &times;
        </button>
        <a href="/Category/Index" class="w3-bar-item w3-button">Food Categories</a>
        <a href="/Food/Index" class="w3-bar-item w3-button">Foods</a>
        <a href="#" class="w3-bar-item w3-button">Drinks</a>
        <a href="/Graph/Index" class="w3-bar-item w3-button">Foods Pie Graphic</a>
        <a class="w3-bar-item w3-button" asp-controller="Category" asp-action="LogOut">Log Out</a>
    </div>

    <div id="main">

        <div class="w3-teal">
            <button id="openNav" class="w3-button w3-teal w3-xlarge" onclick="w3_open()">&#9776;</button>
            <div class="w3-container">
                <h1>Admin</h1>
            </div>
        </div>

        @RenderBody()

    </div>

    <script>
        function w3_open() {
          document.getElementById("main").style.marginLeft = "20%";
          document.getElementById("mySidebar").style.width = "20%";
          document.getElementById("mySidebar").style.display = "block";
          document.getElementById("openNav").style.display = 'none';
        }
        function w3_close() {
          document.getElementById("main").style.marginLeft = "0%";
          document.getElementById("mySidebar").style.display = "none";
          document.getElementById("openNav").style.display = "inline-block";
        }
    </script>

</body>
</html>

